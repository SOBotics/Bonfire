<h3><%= @reason.name %></h3>

<p><%= pluralize(@reason.posts.count, "post") %> caught, most recent <%= time_ago_in_words(@reason.most_recent.created_at) %> ago</p>

<% @posts.each do |post| %>
  <%= render 'posts/post', :post => post %>
<% end %>

<div class="text-center">
  <%= will_paginate @posts, :renderer => BootstrapPagination::Rails %>
</div>
